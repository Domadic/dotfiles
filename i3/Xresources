#define C_color10           #8C8CA0

! Yellow
#define C_color3            #1E828C
#define C_color11           #1E828C

! Blue
#define C_color4            #3C788C
#define C_color12           #3C788C

! Magenta
#define C_color5            #6EA0B4
#define C_color13           #6EA0B4

! Cyan
#define C_color6            #6E8CA0
#define C_color14           #6E8CA0

! White
#define C_color7            #96BEC8
#define C_color15           #96BEC8

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          C_cursorColor
URxvt.cursorUnderline:      false

! Underline color
*colorUL: $color3

! Pointer
URxvt.pointerBlank: true

*background:             C_background
*foreground:             C_foreground
*cursorColor:            C_cursorColor
*pointerColorBackground: C_background
*pointerColorForeground: C_foreground

